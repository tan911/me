---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";
const allPosts = await Astro.glob("./posts/*.md");
---

<Layout title="All my thought's here are personal">
  <Navigation />
  <main
    class="flex items-center justify-center py-10 px-5 text-gray-400 md:py-20"
  >
    <div class="container">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-white md:text-6xl">Blog post</h1>
      </div>
      <div class="mt-12 md:mt-20 md:text-lg">
        <ul>
          {
            allPosts.map((post) => (
              <li>
                <a href={post.url} class="underline underline-offset-4">
                  {post.frontmatter.pubDate.toLocaleString()} -{" "}
                  {post.frontmatter.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </main>
  <Footer addStyle="self-auto" />
</Layout>
